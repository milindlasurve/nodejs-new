BROKER SCHEMA com.icici.xpress_connect.isurepay

DECLARE partnerServiceUserID 	EXTERNAL CHARACTER '';
DECLARE partnerServicePwd 		EXTERNAL CHARACTER '';

CREATE COMPUTE MODULE TransformValidationRequestMessage
	CREATE FUNCTION Main() RETURNS BOOLEAN
	BEGIN
		-- CALL CopyMessageHeaders();
		-- CALL CopyEntireMessage();
		
		SET OutputRoot.Properties.CodedCharSetId = InputRoot.Properties.CodedCharSetId;
		SET OutputRoot.Properties.ContentType = 'application/json';

		SET OutputRoot.HTTPRequestHeader."Content-Type" = 'application/json';
		SET OutputRoot.HTTPRequestHeader."Content-Encoding"= InputRoot.Properties.CodedCharSetId;
		
		
		-- APIC specific authentication headers.
		-- SET OutputRoot.HTTPRequestHeader."X-IBM-Client-Id" = '';
		-- SET OutputRoot.HTTPRequestHeader."X-IBM-Client-Secret" = '';
		
		DECLARE refValidationRequest REFERENCE TO InputRoot.XMLNSC.ns:ISure_Validation_Process.ns:ProcessInput;

		-- Validation Request Payload
        -- Code --
		
		SET OutputRoot.JSON.Data.UserId	= COALESCE(partnerServiceUserID);
		SET OutputRoot.JSON.Data.UserPwd = COALESCE(partnerServicePwd);
		
		-- SET OutputRoot.JSON.Data = refValidationRequest.ClientValidateNo4;
		-- SET OutputRoot.JSON.Data	= refValidationRequest.ClientValidateNo5;
		
		SET OutputLocalEnvironment.Destination.RouterList.DestinationData[1].labelName = 'REST-API/HTTP';
		
		RETURN TRUE;
	END;

	CREATE PROCEDURE CopyMessageHeaders() BEGIN
		DECLARE I INTEGER 1;
		DECLARE J INTEGER;
		SET J = CARDINALITY(InputRoot.*[]);
		WHILE I < J DO
			SET OutputRoot.*[I] = InputRoot.*[I];
			SET I = I + 1;
		END WHILE;
	END;

	CREATE PROCEDURE CopyEntireMessage() BEGIN
		SET OutputRoot = InputRoot;
	END;
END MODULE;